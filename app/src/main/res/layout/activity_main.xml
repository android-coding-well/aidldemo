<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">


    <Button
            android:text="connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickConnect"
    />
    <Button
            android:text="AsyncConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickAsyncConnect"/>
    <Button
            android:text="isconnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickConnectStatus"
    />
    <Button
            android:text="disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickDisconnect"
    />
    <Button
            android:text="register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickRegister"
    />
    <Button
            android:text="send message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickSend"
    />
    <Button
            android:text="unregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickUnregister"
    />
    <Button
            android:text="enter example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickExample"
    />
</LinearLayout>